#:kivy 1.11.1

<ButtonBarWidget>:
    orientation: 'horizontal'
    size_hint: 1, None
    height: 50
    canvas.before:
        Color:
            rgb: 0.5, 0.5, 0.0
        Rectangle:
            pos: self.pos
            size: self.size

<HeroLauncher>:
    size_hint: 1, 1

    canvas.before:
        Color:
            rgb: 0.9, 0.9, 0.9
        Rectangle:
            pos: self.pos
            size: self.size



<OutputWidget>:
    text_size: self.size
    halign: 'left'
    valign: 'top'
    size_hint: 1, 1
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            pos: self.pos
            size: self.size


